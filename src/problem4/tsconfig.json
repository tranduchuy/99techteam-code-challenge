{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Modules */
    "module": "commonjs",
    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,    
    "strict": true,           
    "skipLibCheck": true 
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
